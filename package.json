{
  "name": "wizzard-stepper-react",
  "version": "1.1.0",
  "description": "A flexible, headless, and strictly typed multi-step wizard library for React.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint src/**",
    "test": "vitest",
    "test:run": "vitest run",
    "release": "standard-version",
    "commit": "cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "react",
    "wizard",
    "stepper",
    "form",
    "multi-step"
  ],
  "author": "ZizzX",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZizzX/wizzard-stepper-react.git"
  },
  "bugs": {
    "url": "https://github.com/ZizzX/wizzard-stepper-react/issues",
    "email": "zizzxiii@gmail.com"
  },
  "homepage": "https://zizzx.github.io/wizzard-stepper-react-demo/",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "yup": "^1.0.0",
    "zod": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "yup": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "standard-version": "^9.5.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "yup": "^1.7.1",
    "zod": "^4.2.1"
  }
}
